<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_contact"
        android:divider="@null"
        android:layout_above="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:paddingRight="8dp"
        android:paddingBottom="@dimen/dialogBase_message_paddingTop"
        android:layout_height="40dp">

        <Button
            android:id="@+id/download_contact"
            android:text="下载号码获得积分"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/dialogBase_message_paddingTop"
            android:paddingBottom="@dimen/dialogBase_message_paddingTop"
            android:textSize="@dimen/text_size_large_16"
            android:background="@drawable/main_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>